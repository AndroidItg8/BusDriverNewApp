<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="@dimen/margin_4"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_4"
            app:srcCompat="@drawable/ic_insert_emoticon_black_24dp" />


        <TextView
            android:id="@+id/txtStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/checkbox_status"
            android:layout_toLeftOf="@+id/checkbox_status"
            android:layout_toEndOf="@+id/imgProfilePic"
            android:layout_toRightOf="@+id/imgProfilePic"
            android:layout_alignTop="@+id/imgProfilePic"
            android:layout_marginTop="@dimen/margin_8"
            android:text="Ankit Jain"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_4"
            android:maxLines="1"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textSize="@dimen/textSize_14"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtCheckpointAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/checkbox_status"
            android:layout_toLeftOf="@+id/checkbox_status"
            android:layout_toEndOf="@+id/img_location"
            android:layout_toRightOf="@+id/img_location"
            android:layout_below="@+id/txtStudent"
            android:text="Friends Colony Nagpur"
            android:layout_marginTop="3dp"
            android:layout_marginStart="@dimen/margin_4"
            android:maxLines="1"
            android:visibility="visible"
            android:textColor="@color/colorGray"
            android:textColorHint="@color/colorGray"
            android:textSize="@dimen/textSize_10"
            android:textStyle="normal"
            android:layout_marginLeft="@dimen/margin_4" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/txtStudent"
            android:id="@+id/img_location"
            android:layout_marginTop="3dp"
            android:visibility="visible"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_toEndOf="@+id/imgProfilePic"
            android:layout_toRightOf="@+id/imgProfilePic"
            app:srcCompat="@drawable/ic_location_on_black_24dp" />

        <CheckBox
            android:id="@+id/checkbox_status"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:visibility="visible"
            android:layout_margin="@dimen/margin_4"
    />
    </RelativeLayout>
</android.support.design.card.MaterialCardView>