<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="34dp"
        android:layout_height="30dp"


        app:srcCompat="@drawable/ic_notifications_none_black_24dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/img_notification"
        android:layout_alignRight="@+id/img_notification"
        android:layout_alignTop="@+id/img_notification"
        android:layout_centerHorizontal="true">


        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/custom_badge" />

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10"
            android:textColor="#ffffffff"
            android:textSize="@dimen/badge_text_size" />


    </FrameLayout>


</RelativeLayout>