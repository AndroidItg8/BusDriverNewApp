<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardPreventCornerOverlap="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="48dp"
                android:src="@drawable/img_status"
                android:layout_height="48dp"
                />
            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgProfilePic"
                android:layout_alignBottom="@+id/imgProfilePic"
                android:layout_toEndOf="@+id/imgProfilePic"
                android:layout_toRightOf="@+id/imgProfilePic"
                android:layout_toStartOf="@+id/txtDate"
                android:textSize="@dimen/textSize_14"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"

                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_toLeftOf="@+id/txtDate" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/imgProfilePic"
                android:layout_alignBottom="@+id/imgProfilePic"
                android:gravity="center_vertical"
                android:text="sdfsd"
                android:textColor="@color/colorWhite_400"
                android:textSize="@dimen/textSize_12"
                />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@color/colorWhite"
                android:layout_below="@+id/imgProfilePic"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:id="@+id/txtMessage"
                android:padding="4dp"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize_14"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtReadMore"
                android:layout_below="@+id/txtMessage"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Read More"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>